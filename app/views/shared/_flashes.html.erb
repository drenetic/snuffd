<% if notice %>
  <div class="alert alert-primary alert-dismissible fade show m-3 notice-box " role="alert">
    <i class="fa-duotone fa-square-info"></i> <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
    </button>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-primary alert-dismissible fade show m-3 notice-box" role="alert">
    <%= alert %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
    </button>
  </div>
<% end %>
